<h3>Trainer</h3>
<% if @trainer.id == current_trainer.id %>
	<%= button_to "Create a new Pokemon", pokemon_new_path, :class => "button medium", :method => :get %>
<% end %>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<h4>Captured Pokemon</h4>
<% @trainer_pokemon.each do |p| %> 
  Name: <%= p.name %> 
  Level: <%= p.level %>
  Health: <%= p.health %>
  <%= button_to "Damage!", damage_path(id: p), :class => "button medium", :method => :patch %> 
  <br><br>
<% end %>
